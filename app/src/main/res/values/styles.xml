<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
<!--        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>-->
        <item name="android:windowBackground">@drawable/coldstart_launcher</item>
<!--        <item name="android:windowIsTranslucent">true</item>-->
    </style>

    <style name="NavHomeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--        <item name="android:windowAnimationStyle">@style/CustomActivityAnimation</item>-->
        <item name="android:windowBackground">@drawable/coldstart_launcher</item>
        <item name="android:windowTranslucentStatus">true</item>
        <!--        <item name="android:windowIsTranslucent">true</item>-->
    </style>

    <style name="CustomActivityAnimation" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_up</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_down</item>
    </style>
</resources>
